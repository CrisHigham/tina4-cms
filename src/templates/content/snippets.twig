{% set userRoles = Content.getSecurityAttribute('', session.user.roleId) %}
<table id="snippetGrid" class="table table-striped table-bordered table-condensed" style="width:100%">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Date Created</th>
        <th>Date Modified</th>
        {% if (not userRoles.Content.Pages or userRoles.Content.Snippets.edit) or  (not userRoles.Content.Snippets or userRoles.Content.Snippets.delete) %}
        <th>Options</th>
        {% endif %}
    </tr>
    </thead>
</table>
<script>
    var snippetGrid = null;
    $(document).ready(function () {
        snippetGrid = $('#snippetGrid').DataTable({
            dom: '<"row"<"col-md-6"B><"col-md-4"f><"col-md-2"l>><rtip>',
            ajax: '/api/admin/snippets?formToken={{ formToken("/api/admin/snippets") }}',
            columns: [
                {"data": "id"},
                {"data": "name"},
                {"data": "description"},
                {"data": "dateCreated"},
                {"data": "dateModified"},
                {% if (not userRoles.Content.Pages or userRoles.Content.Snippets.edit) or  (not userRoles.Content.Snippets or userRoles.Content.Snippets.delete) %}
                {
                    "mRender": function (data, type, row) {
                        let html = '';
                        //loadForm parameters: api to retrieve modal form, target div id to load form to, row data, title of
                        {% if (not userRoles.Content.Pages or userRoles.Content.Snippets.edit) %}
                        html += '<button class="btn btn-primary small-button" onclick="showForm(\'edit\',\'/api/admin/snippets/' + row.id + '?formToken={{ formToken("/api/admin/snippets") }}\')">Edit</button>';
                        {% endif %}
                        {% if (not userRoles.Content.Pages or userRoles.Content.Snippets.delete) %}
                        html += ' <button class="btn btn-danger small-button" onclick="if (confirm(\'Delete  record ?\')) { showForm(\'delete\',\'/api/admin/snippets/' + row.id + '?formToken={{ formToken("/api/admin/snippets") }}\');}">Del</button>';
                        {% endif %}
                        return html;

                    },
                    "sClass": "text-right",
                    "searchable": false
                }
                {% endif %}

            ],
            processing: true,
            serverSide: true,
            responsive: true,
            buttons: [
                {% if (not userRoles.Content.Pages or userRoles.Content.Snippets.create) %}
                {
                    text: 'Create',
                    action: function (e, dt, node, config) {
                        let data = {};
                        showForm('create', '/api/admin/snippets/form?formToken={{ formToken("/api/admin/snippets") }}');
                    }
                },
                {% endif %}
                'copy', 'excel', 'pdf'

            ]
        });
    });
</script>
<div id="form"></div>
<div id="message"></div>